{
    "manifest_version": 3,
    "name": "Mini Player & PiP",
    "version": "1.0",
    "description": "Mini player and Picture-in-Picture for any website",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}